{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fulcitt-pos",
  "version": "0.6.0",
  "identifier": "eu.mikolfaro.fulcitt-pos.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "fulcitt-pos",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      }
    },
    "category": "Business",
    "shortDescription": "Minimal Point of Sale system for Gruppo Fulcitt",
    "longDescription": "A modern Point of Sale application built with Tauri and Vue 3, featuring product management, sales processing, thermal receipt printing, and sales reporting. Designed specifically for retail environments with USB thermal printer support."
  }
}
