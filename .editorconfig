# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
max_line_length = 100

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
